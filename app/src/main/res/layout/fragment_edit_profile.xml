<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navdrawerfragment.EditProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rect_bottom_rounded_blue"
                android:elevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white"
                tools:ignore="RedundantDescriptionCheck"
                android:elevation="5dp"/>

            <TextView
                android:id="@+id/tv_profile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/gilroy_extrabold"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="5dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_profile_title"
                android:elevation="5dp">

                <RelativeLayout
                    android:id="@+id/UserPicBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="left"
                    android:layout_margin="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:adjustViewBounds="true"
                        android:background="@color/prussian_blue"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sample_profile"
                        app:shapeAppearanceOverlay="@style/circular">

                    </com.google.android.material.imageview.ShapeableImageView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/gilroy_extrabold"
                    android:text="Tifa Lockhart"
                    android:textColor="@color/prussian_blue"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/UserPicBorder"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_profile_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="50dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="110101050001"
                    android:textColor="@color/prussian_blue"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/UserPicBorder"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_profile_details"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/inter"
                    android:text="My Personal Details"
                    android:textAllCaps="false"
                    android:textColor="@color/dim_grey_dark"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_profile_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/dim_grey_dark"
                    app:strokeWidth="1dp"
                    android:checkable="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_profile_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/inter"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="@color/dim_grey_dark"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_profile_details"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:strokeColor="@color/dim_grey_dark"
                    app:strokeWidth="1dp"
                    android:checkable="true" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_profile_change_password">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_vaccine_cert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:layout_marginStart="30dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:strokeColor="@color/black_70"
                        app:strokeWidth="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:background="@drawable/rect_half_rounded_orange"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/tv_digital_cert"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/gilroy_semibold"
                                    android:text="Digital Certificate"
                                    android:textColor="@color/white"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/tv_covid19_vaccination"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/gilroy_medium"
                                    android:text="Covid-19 Vaccination"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/malaysia_icon" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingRight="20dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/gilroy_regular"
                                        android:text="Name"
                                        android:textColor="@color/prussian_blue_dark"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_username_cert"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gilroy_semibold"
                                        android:text="Tifa Lockhart"
                                        android:textColor="@color/prussian_blue_dark"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:fontFamily="@font/gilroy_regular"
                                        android:text="NRIC / Passport No."
                                        android:textColor="@color/prussian_blue_dark"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_userIC_cert"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gilroy_semibold"
                                        android:text="110101050001"
                                        android:textColor="@color/prussian_blue_dark"
                                        android:textSize="16sp" />

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:backgroundTint="@color/light_orange_2"
                                        app:cardCornerRadius="20dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:padding="10dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/gilroy_semibold"
                                                android:text="Dose 1:"
                                                android:textColor="@color/prussian_blue_dark"
                                                android:textSize="12sp" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Date:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose1_date"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="23 May 2021 09:18 AM"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Manufacturer:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose1_manufacturer"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="COMIRNATY Concentrate for Dispersion for Injection"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Facility:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose1_facility"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="Klinik Kesihatan Kuala Lumpur"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Batch:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose1_batch"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="5018885"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                    </com.google.android.material.card.MaterialCardView>

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="30dp"
                                        android:backgroundTint="@color/light_green_60"
                                        app:cardCornerRadius="20dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical"
                                            android:padding="10dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="10dp"
                                                android:fontFamily="@font/gilroy_semibold"
                                                android:text="Dose 2:"
                                                android:textColor="@color/prussian_blue_dark"
                                                android:textSize="12sp" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Date:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose2_date"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="11 Jun 2021 09:15 AM"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Manufacturer:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose2_manufacturer"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="COMIRNATY Concentrate for Dispersion for Injection"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Facility:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose2_facility"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="Klinik Kesihatan Kuala Lumpur"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="5dp"
                                                android:orientation="horizontal">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/gilroy_regular"
                                                    android:text="Batch:"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />

                                                <TextView
                                                    android:id="@+id/tv_dose2_batch"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="10dp"
                                                    android:fontFamily="@font/gilroy_semibold"
                                                    android:text="5019440"
                                                    android:textColor="@color/prussian_blue_dark"
                                                    android:textSize="12sp" />
                                            </LinearLayout>
                                        </LinearLayout>

                                    </com.google.android.material.card.MaterialCardView>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>